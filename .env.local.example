# WikiGaiaLab Local Development Environment
# Copy this file to .env.local and customize for your local setup

# =============================================================================
# QUICK SETUP FOR LOCAL DEVELOPMENT
# =============================================================================

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=WikiGaiaLab

# Supabase (get these from your Supabase project)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# NextAuth
NEXTAUTH_SECRET=your_development_secret_at_least_32_characters
NEXTAUTH_URL=http://localhost:3000

# AI Services (optional for local development)
OPENAI_API_KEY=sk-your_openai_api_key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Email (optional - set MOCK_EMAIL_SERVICE=true to skip)
RESEND_API_KEY=re_your_resend_api_key
MOCK_EMAIL_SERVICE=true

# Payments (optional - set MOCK_PAYMENT_SERVICE=true to skip)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
MOCK_PAYMENT_SERVICE=true

# Development Settings
NODE_ENV=development
DEBUG_MODE=true
FEATURE_AI_INTEGRATION=true
FEATURE_PAYMENT_SYSTEM=false
FEATURE_EMAIL_NOTIFICATIONS=false

# Analytics (use placeholder for development)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX